<form id="MessageForm"> 
    <div class="row">
        <div class="col-md-6 mt-2">
          <input id="UserEmail" type="text" class="form-control" placeholder="Ingresar e-mail" required>
        </div>
        <div class="col-md-6 mt-2">
          <textarea id="UserMessage" type="textarea" class="form-control" placeholder="Mensaje..." required>
            </textarea>
        </div>
        <div class="col-12 mt-2">
            <button type="submit" class="btn btn-primary">Enviar</button>
          </div>
      </div>    
</form>